<KnowledgeItem ID="OpexSoftware:SolrInstallConfig:SolrInstallConfigKI" xmlns="http://www.arago.de/KiSchema">
	<Title>SolrInstallConfig</Title>
	<Description>Initiates the workflow for Installing Solr by writing into the MARS model and creating new corresponding data blocks in the Issue</Description>

	<BindAttributes>
		<AttributeFilter Name="NodeType" Mode="string" Value="Machine"/>
		<RelatedNode Mode="predecessor" Alias="PRE">
			<AttributeFilter Name="NodeType" Mode="string" Value="Application"/>
		</RelatedNode>
	</BindAttributes>

	<Log>__KI ${KIID} is now bound to ${NODE:NodeID}__</Log>

	<CreateTrigger>

		<IssueCondition>
			<Description>Searches for an Issue with DataBlock SolrInstallConfig and the necessary information for sucessful completion of workflow</Description>
			<SubItem Name="SolrInstallConfig" Alias="SIC">
				<AttributeFilter Name="TargetApp" Mode="string" Value="${PRE:NodeName}"/>
				<AttributeFilter Name="TargetMachine" Mode="string" Value="${NODE:NodeName}"/>
				<AttributeFilter Name="TargetTar_FileName" Mode="exists"/>
				<AttributeFilter Name="Untar_folder" Mode="exists"/>
        		<AttributeFilter Name="Target_path" Mode="exists"/>
        		<AttributeFilter Name="Download_url" Mode="exists"/>
				<AttributeFilter Name="TargetState" Mode="string" Value="Created"/>
				<AttributeFilter Name="Status" Mode="notexists"/>
				
			</SubItem>
		</IssueCondition>

		<Activate>
			
			<SetAttribute Name="SIC:Status" Value="WorkflowStarted" /> 
			
			<GenerateData Alias="PROTASKS"> 
				<DataType>ProcessingTasks</DataType> 
			</GenerateData>
			
           <!-- TASK1-->
           
			<IncAttribute Name="PROTASKS:NumberTotal"/>
			
			<XMLExtract StoreTo="NODE:Extensions" Mode="simple"><![CDATA[<NewBlock><Tasks 
				TargetTar_FileName=${SIC:TargetTar_FileName}
				TargetMachine=${SIC:TargetMachine}      
				Untar_folder=${SIC:Untar_folder}      
				TargetState=Created
				Target_path='${SIC:Target_path}'
				Download_url='${SIC:Download_url}'
				Host=${SIC:Host}
				User=${SIC:User}
				Lib=WGET
				CurrentState=ReadState/> 
				</NewBlock>]]>
			</XMLExtract> 
			
 
      
			<GenerateData Alias="VAL"> 
				<!-- Independent="true" can be applied, if multiple Issues should be generated. In this case pass on the parent IssueID to the resulting Issue <ParentIID>${IID}</ParentIID>, don't forget to include ParentIID=${IID} into the Tasks DataBlock on the Node -->
				<DataType>Validate</DataType>
				<ExtUID>${NODE:Extensions/Tasks/UID}</ExtUID>
			</GenerateData>	
      
      <!-- TASK2-->
           
			<IncAttribute Name="PROTASKS:NumberTotal"/>
			
			<XMLExtract StoreTo="NODE:Extensions" Mode="simple"><![CDATA[<NewBlock><Tasks 
				TargetTar_FileName=${SIC:TargetTar_FileName}
				TargetMachine=${SIC:TargetMachine}      
				TargetState=Created
				Untar_folder=${SIC:Untar_folder}      
				Target_path='${SIC:Target_path}'
				Download_url='${SIC:Download_url}'
				Host=${SIC:Host}
				User=${SIC:User}
				Lib=TAR
				CurrentState=ReadState/> 
				</NewBlock>]]>
			</XMLExtract> 
			
 
      
			<GenerateData Alias="VAL"> 
				<!-- Independent="true" can be applied, if multiple Issues should be generated. In this case pass on the parent IssueID to the resulting Issue <ParentIID>${IID}</ParentIID>, don't forget to include ParentIID=${IID} into the Tasks DataBlock on the Node -->
				<DataType>Validate</DataType>
				<ExtUID>${NODE:Extensions/Tasks/UID}</ExtUID>
			</GenerateData>
            
			 	
			
      
			<!--		<Resolve>Resolved initial Issue with ID ${IID}</Resolve> - use if ChildIssues are created-->
			
			<GenerateData> 
				<DataType>Resolve</DataType>
				<Status>checkForResolve</Status>
			</GenerateData>	
			
		</Activate>
	</CreateTrigger>
</KnowledgeItem>
