<KnowledgeItem ID="OpexSoftware:WorkFlowUserStory:AddSudoUser" xmlns="http://www.arago.de/KiSchema">
	<Title>AddSudoUser</Title>
	<Description>Initiates the workflow for adding a user to sudoers list.
	</Description>
	<BindAttributes>
		<AttributeFilter Name="NodeType" Mode="string" Value="Machine" />
	</BindAttributes>

	<Log>__KI ${KIID} is now bound to ${NODE:NodeID}__</Log>

	<CreateTrigger>
		<IssueCondition>
			<Description>Searches for an Issue with DataBlock ADDSUDOUSER and triggers the workflow for successful completion</Description>
			<SubItem Name="AddSudoUser" Alias="ADDSUDOUSER">
				<AttributeFilter Name="TargetMachine" Mode="string" Value="${NODE:NodeName}" />
				<AttributeFilter Name="TargetState" Mode="string" Value="Created" />
				<AttributeFilter Name="Status" Mode="notexists" />
				<AttributeFilter Name="LinuxUser" Mode="exists" />
			</SubItem>
		</IssueCondition>

		<Activate>
			<SetAttribute Name="ADDSUDOUSER:Status" Value="WorkflowStarted" />
			<GenerateData Alias="PROTASKS">
				<DataType>ProcessingTasks</DataType>
				<CurrentTask>1</CurrentTask>
			</GenerateData>

			<!--Task1 Check if Sudo package is there -->

			<IncAttribute Name="PROTASKS:NumberTotal" />

			<XMLExtract StoreTo="NODE:Extensions" Mode="simple"><![CDATA[<NewBlock><Tasks
				TargetMachine=${ADDSUDOUSER:TargetMachine}      
				TargetState=Created
				User=${ADDSUDOUSER:User}
				Lib=PKG
				PKG=sudo
				Host=${ADDSUDOUSER:Host}
				CurrentState=ReadState
				TaskNumber=${PROTASKS:NumberTotal}
				/> </NewBlock>]]>
			</XMLExtract>


			<GenerateData Alias="VAL">
				<!--Independent="true" can be applied, if multiple Issues should be 
					generated. In this case pass on the parent IssueID to the resulting Issue 
					<ParentIID>${IID}</ParentIID>, don't forget to include ParentIID=${IID} into 
					the Tasks DataBlock on the Node -->
				<DataType>Validate</DataType>
				<ExtUID>${NODE:Extensions/Tasks/UID}</ExtUID>
			</GenerateData>


			<!--Task2 Add user to sudoers list. -->

			<IncAttribute Name="PROTASKS:NumberTotal" />

			<XMLExtract StoreTo="NODE:Extensions" Mode="simple"><![CDATA[<NewBlock><Tasks
				TargetPath='${ADDSUDOUSER:TargetPath}'
				TargetMachine=${ADDSUDOUSER:TargetMachine}
				TargetState=Created
				User=${ADDSUDOUSER:User}
				Host=${ADDSUDOUSER:Host}
				Lib=RUNCOMMAND
				Command='sudo adduser ${ADDSUDOUSER:LinuxUser} sudo'
				CurrentState=ReadState
                TaskNumber=${PROTASKS:NumberTotal}
				/></NewBlock>]]>
			</XMLExtract>

			<GenerateData Alias="VAL">
				<!-- Independent="true" can be applied, if multiple Issues should be 
					generated. In this case pass on the parent IssueID to the resulting Issue 
					<ParentIID>${IID}</ParentIID>, don't forget to include ParentIID=${IID} into 
					the Tasks DataBlock on the Node -->
				<DataType>Validate</DataType>
				<ExtUID>${NODE:Extensions/Tasks/UID}</ExtUID>
			</GenerateData>

			<!--<Resolve>Resolved initial Issue with ID ${IID}</Resolve> - use if 
				ChildIssues are created -->

			<GenerateData>
				<DataType>Resolve</DataType>
				<Status>checkForResolve</Status>
			</GenerateData>
		</Activate>
	</CreateTrigger>
</KnowledgeItem>
