<KnowledgeItem ID="OpexSoftware:DEPLOYSHARDEDMONGODBCLUSTER:__core__Ubuntu__STARTMONGOSINSTANCE__ReadState__" xmlns="http://www.arago.de/KiSchema">
	<Title>__core__Ubuntu__STARTMONGOSINSTANCE__ReadState__</Title>
	<Description> This KI searches for the DataBlock called __core__Ubuntu__RUNCOMMAND__ReadState__ and verifies the CurrentState of the package on the specified Target Machine and writes it back to the node. </Description>

	<BindAttributes>
		<AttributeFilter Name="NodeType" Mode="string" Value="Machine"/>
		<SubItem Name="OSInformation" Alias="OSINFO">
			<AttributeFilter Name="Name" Mode="string" Value="Ubuntu"/>
		</SubItem>
		<SubItem Name="Extensions" Alias="EXT">
			<SubItem Name="Tasks" Alias="TASKS">
				<AttributeFilter Name="TargetMachine" Mode="exists"/>
				<AttributeFilter Name="ConfigServerHostnames" Mode="exists"/>
				<AttributeFilter Name="ConfigServerPort" Mode="exists"/>
				<AttributeFilter Name="User" Mode="exists"/>	
				<AttributeFilter Name="Host" Mode="exists"/>
			</SubItem>
		</SubItem>
	</BindAttributes>

	<Log>__KI ${KIID} is now bound to ${NODE:NodeID}__</Log>
		
	<CreateTrigger>
		<IssueCondition>
			<Description> Checks Issue for DataBlock __core__${NODE:OSInfo}__STARTMONGOSINSTANCE__ReadState__ and attribute ExtUID being the same as the machine KI binds to. </Description>
			<SubItem Name="__core__Ubuntu__STARTMONGOSINSTANCE__ReadState__" Alias="CHECK">
				<AttributeFilter Name="ExtUID" Mode="string" Value="${TASKS:UID}"/>	
				<AttributeFilter Name="Status" Mode="notexists"/>	
			</SubItem>
		</IssueCondition>

		<Activate>
			<If>
				<VarCondition VarString="${TASKS:PID}" Mode="ne" Value=""/>
				<Then>
					<Action Capability="ExecuteCommand" Error="ERROR" Output="OUTPUT" Result="RESULT" SystemRC="SYSTEMRC" Timeout="60">
						<Parameter Name="User">${TASKS:User}</Parameter>
						<Parameter Name="Hostname">${TASKS:Host}</Parameter>
						<Parameter Name="Command">"ps -ef | grep ${TASKS:PID} | grep -v grep"</Parameter> 
					</Action>
				
				<If>
					<VarCondition VarString="${SYSTEMRC}" Mode="eq" Value="0"/>
					<Then>
						<SetAttribute Name="TASKS:CurrentState" Value="ProcessingTask"/>
					</Then>
					<Else>
						<SetAttribute Name="TASKS:CurrentState" Value="Created"/>
					</Else>
				</If>
				</Then>
			<Else>
				<SetAttribute Name="TASKS:CurrentState" Value="ProcessingTask"/>
			</Else>
			</If>
			
			<SetAttribute Name="CHECK:Status" Value="CurrentStateRead" /> 
			
		</Activate>
	</CreateTrigger>
</KnowledgeItem>


