<KnowledgeItem
	ID="OpexSoftware:Ubuntu:FILECREATE:__core__Ubuntu__FILECREATE__ReadState__"
	xmlns="http://www.arago.de/KiSchema">
	<Title>__core__Ubuntu__FILECREATE__ReadState__</Title>
	<Description> This KI searches for the DataBlock called __core__Ubuntu__FILECREATE__ReadState__ and verifies the CurrentState of the package on the specified Target Machine and writes it back to the node. </Description>


	<BindAttributes>
		<AttributeFilter Name="NodeType" Mode="string" Value="Machine" />
		<AttributeFilter Name="MachineClass" Mode="string"
			Value="Linux" />
		<SubItem Name="Extensions" Alias="EXT">
			<SubItem Name="Tasks" Alias="TASKS">
				<AttributeFilter Name="FilePath" Mode="exists" />
				<AttributeFilter Name="TargetMachine" Mode="exists" />
				<AttributeFilter Name="FileName" Mode="exists" />
				<AttributeFilter Name="FileContent" Mode="exists" />
				<AttributeFilter Name="User" Mode="exists" />
				<AttributeFilter Name="Host" Mode="exists" />
			</SubItem>
		</SubItem>
	</BindAttributes>

	<Log>__KI ${KIID} is now bound to ${NODE:NodeID}__</Log>

	<CreateTrigger>
		<IssueCondition>
			<Description> Checks Issue for DataBlock __core__${NODE:MachineClass}__FILECREATE__ReadState__ and attribute ExtUID being the same as the machine KI binds to. </Description>
			<SubItem Name="__core__Ubuntu__FILECREATE__ReadState__" Alias="CHECK">
				<AttributeFilter Name="ExtUID" Mode="string" Value="${TASKS:UID}" />
				<AttributeFilter Name="Status" Mode="notexists" />
			</SubItem>
		</IssueCondition>

		<Activate>
			<Action Capability="ExecuteCommand" Error="ERROR" Output="OUTPUT"
				Result="RESULT" SystemRC="SYSTEMRC" Timeout="60">
				<Parameter Name="User">${TASKS:User}</Parameter>
				<Parameter Name="Hostname">${TASKS:Host}</Parameter>
				<Parameter Name="Command">
                    <![CDATA["sudo echo  -e \"${TASKS:FileContent}\" > /tmp/${TASKS:FileName} && sudo ls ${TASKS:FilePath}/${TASKS:FileName} && sudo diff /tmp/${TASKS:FileName} ${TASKS:FilePath}/${TASKS:FileName}"]]>
				</Parameter>
			</Action>

			<If>
				<VarCondition VarString="${SYSTEMRC}" Mode="eq" Value="0" />
				<Then>
					<SetAttribute Name="TASKS:CurrentState" Value="Created" />
				</Then>
				<Else>
					<SetAttribute Name="TASKS:CurrentState" Value="Deleted" />
				</Else>
			</If>
			<SetAttribute Name="CHECK:Status" Value="CurrentStateRead" />

		</Activate>
	</CreateTrigger>
</KnowledgeItem>
