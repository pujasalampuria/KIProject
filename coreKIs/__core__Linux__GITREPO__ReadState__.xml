<KnowledgeItem ID="OpexSoftware:GITCLONEREPO:__core__Linux__GITREPO__ReadState__" xmlns="http://www.arago.de/KiSchema">
	<Title>__core__Linux__GITREPO__ReadState__</Title>
	<Description> This KI searches for the DataBlock called __core__Linux__GITREPO__ReadState__ and verifies whether the Git Repository is already cloned or not</Description>

	<BindAttributes>
		<AttributeFilter Name="NodeType" Mode="string" Value="Machine"/>
		<AttributeFilter Name="MachineClass" Mode="string" Value="Linux"/> 
		<SubItem Name="Extensions" Alias="EXT">
			<SubItem Name="Tasks" Alias="TASK">
				<AttributeFilter Name="TargetState" Mode="exists"/>
				<AttributeFilter Name="TargetMachine" Mode="exists"/>
				<AttributeFilter Name="User" Mode="exists"/>
				<AttributeFilter Name="TargetRepo" Mode="exists"/>
				<AttributeFilter Name="Host" Mode="exists"/>
				<AttributeFilter Name="TargetPath" Mode="exists"/>
				<AttributeFilter Name="GitRepoName" Mode="exists"/>
			</SubItem>
		</SubItem>
	</BindAttributes>

	<Log>__KI ${KIID} is now bound to ${NODE:NodeID}__</Log>
		
	<CreateTrigger>
		<IssueCondition>
			<Description> Checks Issue for DataBlock __core__${NODE:MachineClass}__GITREPO__ReadState__ and attribute ExtUID being the same as the machine KI binds to. </Description>
			<SubItem Name="__core__Linux__GITREPO__ReadState__" Alias="CHECK">
				<AttributeFilter Name="ExtUID" Mode="string" Value="${TASK:UID}"/>	
				<AttributeFilter Name="Status" Mode="notexists"/>	
			</SubItem>
		</IssueCondition>

		<Activate>
			<Action Capability="ExecuteCommand" Error="ERROR" Output="OUTPUT" Result="RESULT" SystemRC="SYSTEMRC" Timeout="60">
				<Parameter Name="User">${TASK:User}</Parameter>
				<Parameter Name="Hostname">${TASK:Host}</Parameter>
				<Parameter Name="Command">"cd ${TASK:TargetPath}/${TASK:GitRepoName}"</Parameter> 
			</Action>
			
			<If>
				<VarCondition VarString="${SYSTEMRC}" Mode="eq" Value="0"/>
				<Then>
					<SetAttribute Name="TASK:CurrentState" Value="Created"/>
				</Then>
				<Else>
					<SetAttribute Name="TASK:CurrentState" Value="NotCreated"/>
				</Else>
			</If>			
			<SetAttribute Name="CHECK:Status" Value="CurrentStateRead" /> 
		</Activate>
	</CreateTrigger>
</KnowledgeItem>


