<?xml version="1.0" encoding="UTF-8"?>
<KnowledgeItem ID="OpexSoftware:Ubuntu:SETDEBCONFSELECTION:__core__Ubuntu__SETDEBCONFSELECTION__ReadState__" xmlns="http://www.arago.de/KiSchema">
	<Title>__core__Ubuntu__SETDEBCONFSELECTION__ReadState__</Title>
	<Description> This KI searches for the DataBlock called __core__Ubuntu__SETDEBCONFSELECTION__ReadState__ 
		and verifies the CurrentState of the package on the specified Target Machine and writes it back to the node. </Description>

	<BindAttributes>
		<AttributeFilter Name="NodeType" Mode="string" Value="Machine" />
		<AttributeFilter Name="MachineClass" Mode="string" Value="Linux" />
		<SubItem Name="OSInformation" Alias="OSINFO">
			<AttributeFilter Name="Name" Mode="string" Value="Ubuntu" />
		</SubItem>
		<SubItem Name="Extensions" Alias="EXT">
			<SubItem Name="Tasks" Alias="TASKS">
				<AttributeFilter Name="TargetMachine" Mode="exists" />
				<AttributeFilter Name="User" Mode="exists" />
				<AttributeFilter Name="Param4" Mode="exists" />
				<AttributeFilter Name="Param2" Mode="exists" />
				<AttributeFilter Name="Host" Mode="exists" />
			</SubItem>
		</SubItem>
	</BindAttributes>

	<Log>__KI ${KIID} is now bound to ${NODE:NodeID}__</Log>

	<CreateTrigger>
		<IssueCondition>
			<Description> Checks Issue for DataBlock __core__Ubuntu__SETDEBCONFSELECTION__ReadState__ 
				and attribute ExtUID being the same as the machine KI binds to.
			</Description>
			<SubItem Name="__core__Ubuntu__SETDEBCONFSELECTION__ReadState__" Alias="CHECK">
				<AttributeFilter Name="ExtUID" Mode="string" Value="${TASKS:UID}" />
				<AttributeFilter Name="Status" Mode="notexists" />
			</SubItem>
		</IssueCondition>

		<Activate>
			<Action Capability="ExecuteCommand" Error="ERROR" Output="OUTPUT" Result="RESULT" SystemRC="SYSTEMRC" Timeout="60">
				<Parameter Name="User">${TASKS:User}</Parameter>
				<Parameter Name="Hostname">${TASKS:Host}</Parameter>
				<Parameter Name="Command">"sudo debconf-get-selections | grep ${TASKS:Param2} | grep ${TASKS:Param4}"</Parameter>
			</Action>

			<If>
				<VarCondition VarString="${SYSTEMRC}" Mode="eq" Value="0" />
				<Then>
					<SetAttribute Name="TASKS:CurrentState" Value="Created" />
				</Then>
				<Else>
					<SetAttribute Name="TASKS:CurrentState" Value="NotRUN" />
				</Else>
			</If>
			<SetAttribute Name="CHECK:Status" Value="CurrentStateRead" />
		</Activate>
	</CreateTrigger>
</KnowledgeItem>