<KnowledgeItem ID="OpexSoftware:RESTAPI:__core__Linux__CURLPOST__ReadState__" xmlns="http://www.arago.de/KiSchema">
	<Title>__core__Linux__CURLPOST__ReadState__</Title>
	<Description> This KI searches for the DataBlock called __core__Linux__CURLPOST__ReadState__ and verifies the Output of the curl command on the specified Target Machine and writes it back to the node
	</Description>

	<BindAttributes>
	    <AttributeFilter Name="NodeType" Mode="string" Value="Machine"/>
	    <AttributeFilter Name="MachineClass" Mode="string" Value="Linux"/>
	  	<SubItem Name="Extensions" Alias="EXT">
	            <SubItem Name="Tasks" Alias="TASK">
		  	<AttributeFilter Name="TargetState" Mode="exists"/>
			<AttributeFilter Name="TargetMachine" Mode="exists"/>
			<AttributeFilter Name="User" Mode="exists"/>
		        <AttributeFilter Name="Host" Mode="exists"/>
		   </SubItem>
	        </SubItem>
        </BindAttributes>
	
        <Log>__KI ${KIID} is now bound to ${NODE:NodeID}__</Log>
			
       <CreateTrigger>
	  <IssueCondition>
	  <Description> Checks Issue for DataBlock __core__Linux__CURLPOST__ReadState__ and attribute ExtUID being the same as in the Node the KI binds to. </Description>
	        <SubItem Name="__core__Linux__CURLPOST__ReadState__" Alias="CHECK">
			<AttributeFilter Name="ExtUID" Mode="string" Value="${TASK:UID}"/>
			<AttributeFilter Name="Status" Mode="notexists"/>	
		</SubItem>
	</IssueCondition>
        
	<Activate>
            <Action Capability="ExecuteLocalCommand" Error="ERROR" Output="OUTPUT" Result="RESULT" SystemRC="SYSTEMRC" Timeout="300">
		<Parameter Name="Command">ls /tmp/${TASK:UID}</Parameter>
	   </Action> 
	      <If>
		<VarCondition VarString="${SYSTEMRC}" Mode="eq" Value="0"/>
		   <Then>
		       <SetAttribute Name="TASK:CurrentState" Value="Created"/>
	           </Then>
              <Else>
                   <SetAttribute Name="TASK:CurrentState" Value="NotCreated"/>
	      </Else>  
	      </If>		
	         <SetAttribute Name="CHECK:Status" Value="CurrentStateRead" /> 
	</Activate>
    </CreateTrigger>
</KnowledgeItem>



