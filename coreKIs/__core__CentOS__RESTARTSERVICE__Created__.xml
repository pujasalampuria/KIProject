<KnowledgeItem ID="OpexSoftware:CentOS:RESTARTSERVICE:__core__CentOS__RESTARTSERVICE__Created__" xmlns="http://www.arago.de/KiSchema">
	<Title>__core__CentOS__RESTARTSERVICE__Created__</Title>
	<Description> This KI searches for the DataBlock called __core__CentOS__RESTARTSERVICE__Created__ and re-start the specified service and writes the current status back to the node. </Description>

	<BindAttributes>
		<AttributeFilter Name="NodeType" Mode="string" Value="Machine"/>
		<AttributeFilter Name="MachineClass" Mode="string" Value="Linux"/>
		<SubItem Name="Extensions" Alias="EXT">
			<SubItem Name="Tasks" Alias="TASKS">
				<AttributeFilter Name="ServiceName" Mode="exists"/>
				<AttributeFilter Name="TargetMachine" Mode="exists"/>
				<AttributeFilter Name="User" Mode="exists"/>
				<AttributeFilter Name="Host" Mode="exists"/>
			</SubItem>
		</SubItem>
	</BindAttributes>
	
	<Log>__KI ${KIID} is now bound to ${NODE:NodeID}__</Log>
		
	<CreateTrigger>
		<IssueCondition>
			<Description> Checks Issue for DataBlock __core__${NODE:MachineClass}__RESTARTSERVICE__Created__ and attribute ExtUID being the same as in the Node the KI binds to. </Description>
			<SubItem Name="__core__CentOS__RESTARTSERVICE__Created__" Alias="INSTALL">
				<AttributeFilter Name="ExtUID" Mode="string" Value="${TASKS:UID}" />
				<AttributeFilter Name="Status" Mode="notexists"/>	
			</SubItem>
		</IssueCondition>

		<Activate>
			<Action Capability="ExecuteCommand" Error="ERROR" Output="OUTPUT" Result="RESULT" SystemRC="SYSTEMRC" Timeout="60">
				<Parameter Name="User">${TASKS:User}</Parameter>
				<Parameter Name="Hostname">${TASKS:Host}</Parameter>
				<Parameter Name="Command"><![CDATA["sudo service ${TASKS:ServiceName} restart && touch /tmp/${TASKS:UID}"]]>
				</Parameter> 
			</Action>
			
			<If>
				<VarCondition VarString="${SYSTEMRC}" Mode="eq" Value="0"/>
				<Then>
					<SetAttribute Name="TASKS:CurrentState" Value="ReadState"/>
				</Then>
				<Else>
					<Eject>__Failed to restart the service ${TASKS:ServiceName}__</Eject>
				</Else>
			</If>

			<SetAttribute Name="INSTALL:Status" Value="created" /> 
		</Activate>
	</CreateTrigger>
</KnowledgeItem>


