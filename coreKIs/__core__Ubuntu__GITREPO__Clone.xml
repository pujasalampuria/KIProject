<KnowledgeItem ID="OpexSoftware:__core__Ubuntu__GITREPO__Clone__" xmlns="http://www.arago.de/KiSchema">
	<Title>__core__Ubuntu__GITREPO__Clone__</Title>
	<Description> This KI searches for the DataBlock called __core__Ubuntu__GITREPO__Cloned__  and removes the package on the specified Target Machine and writes the status back to the node. </Description>

	<BindAttributes>
		<AttributeFilter Name="MachineClass" Mode="string" Value="Linux"/>
		<SubItem Name="Extensions" Alias="EXT">
			<SubItem Name="Tasks" Alias="TASK">
				<AttributeFilter Name="TargetState" Mode="exists"/>
				<AttributeFilter Name="TargetMachine" Mode="exists"/>
				<AttributeFilter Name="User" Mode="exists"/>
				<AttributeFilter Name="TargetRepo" Mode="exists"/>
                                <AttributeFilter Name="Host" Mode="exists"/>
				<AttributeFilter Name="TargetPath" Mode="exists"/>
                                <AttributeFilter Name="GitRepoName" Mode="exists"/>
			</SubItem>
		</SubItem>
	</BindAttributes>
	
	<Log>__KI ${KIID} is now bound to ${NODE:NodeID}__</Log>
		
	<CreateTrigger>
		<IssueCondition>
			<Description> Checks Issue for DataBlock __core__Ubuntu__GITREPO__Clone__and attribute ExtUID being the same as in the Node the KI binds to. </Description>
			<SubItem Name="__core__Ubuntu__GITREPO__Cloned__" Alias="CLONE">
				<AttributeFilter Name="ExtUID" Mode="string" Value="${TASK:UID}"/>
				<AttributeFilter Name="Status" Mode="notexists"/>	
			</SubItem>
		</IssueCondition>

		<Activate>
		  	<Action Capability="ExecuteCommand" Error="ERROR" Output="OUTPUT" Result="RESULT" SystemRC="SYSTEMRC" Timeout="60">
				<Parameter Name="User">${TASK:User}</Parameter>
				<Parameter Name="Hostname">${TASK:Host}</Parameter>
				<Parameter Name="Command">" cd ${TASK:TargetPath} ; git clone ${TASK:TargetRepo}"</Parameter> 
			</Action>
			
			<If>
				<VarCondition VarString="${SYSTEMRC}" Mode="eq" Value="0"/>
				<Then>
					<SetAttribute Name="TASK:CurrentState" Value="ReadState"/>
				</Then>
				<Else>
					<Eject>__Failed to clone repository ${TASK:TargetRepo}</Eject>
				</Else>
			</If>
			<SetAttribute Name="CLONE:Status" Value="CurrentStateClone" /> 
		</Activate>
	</CreateTrigger>
</KnowledgeItem>


