<KnowledgeItem ID="OpexSoftware:Ubuntu:COPY:__core__Ubuntu__COPY__Created__" xmlns="http://www.arago.de/KiSchema">
	<Title>__core__Ubuntu__COPY__Created__</Title>
	<Description> This KI searches for the DataBlock called __core__CentOS__COPY__Created__ and copies the specified source at the specified destination on the specified Target Machine and writes the current status back to the node. </Description>

	<BindAttributes>
		<AttributeFilter Name="NodeType" Mode="string" Value="Machine"/>
		<SubItem Name="OSInformation" Alias="OSINFO">
			<AttributeFilter Name="Name" Mode="string" Value="Ubuntu"/>
		</SubItem>
		<SubItem Name="Extensions" Alias="EXT">
			<SubItem Name="Tasks" Alias="TASKS">
				<AttributeFilter Name="Src" Mode="exists"/>
				<AttributeFilter Name="Dest" Mode="exists"/>
				<AttributeFilter Name="TargetMachine" Mode="exists"/>
				<AttributeFilter Name="User" Mode="exists"/>
				<AttributeFilter Name="Host" Mode="exists"/>
			</SubItem>
		</SubItem>
	</BindAttributes>

	<Log>__KI ${KIID} is now bound to ${NODE:NodeID}__</Log>
		
	<CreateTrigger>
		<IssueCondition>
			<Description> Checks Issue for DataBlock __core__${NODE:OSInfo}__COPY__Created__ and attribute ExtUID being the same as the machine KI binds to. </Description>
			<SubItem Name="__core__Ubuntu__COPY__Created__" Alias="CHECK">
				<AttributeFilter Name="ExtUID" Mode="string" Value="${TASKS:UID}"/>	
				<AttributeFilter Name="Status" Mode="notexists"/>	
			</SubItem>
		</IssueCondition>

		<Activate>
		<!-- 	<Action Capability="RunLocalScript" Error="ERROR" Output="OUTPUT" Result="RESULT" SystemRC="SYSTEMRC" Timeout="60">
				
				<Parameter Name="Command">
					scp -r ${TASKS:Src} ${TASKS.User}@${TASKS.Host}:${TASKS:Dest}
				</Parameter> 
			</Action> -->
			<Execute StoreTo="OUTPUT" StoreStatus="SYSTEMRC">
                <![CDATA[
                    fileName=`echo "${TASKS:Src}" | rev | cut -d"/" -f1 | rev`  
                    echo "File name is: ${fileName}"                  
                	scp -r "${TASKS:Src}" ${TASKS:User}@${TASKS:Host}:/tmp
                	echo "Running ssh command: sudo cp -rf /tmp/${fileName} ${TASKS:Dest}"
                	ssh ${TASKS:User}@${TASKS:Host} "sudo cp -rf /tmp/${fileName} ${TASKS:Dest}"
                ]]>
            </Execute>
			
			<If>
				<VarCondition VarString="${SYSTEMRC}" Mode="eq" Value="0"/>
				<Then>
					<SetAttribute Name="TASKS:CurrentState" Value="ReadState"/>
				</Then>
				<Else>
					<Eject>__Failed to copy source {TASKS.Src} at destination ${TASKS:Dest}__</Eject>
				</Else>
			</If>
		
			<SetAttribute Name="CHECK:Status" Value="CurrentStateRead" /> 
			
		</Activate>
	</CreateTrigger>
</KnowledgeItem>


