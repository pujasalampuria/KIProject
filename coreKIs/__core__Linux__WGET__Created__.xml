<KnowledgeItem ID="OpexSoftware:Linux:WGET:__core__Linux__WGET__Created__" xmlns="http://www.arago.de/KiSchema">
	<Title>__core__Linux__WGET__Created__</Title>
	<Description> This KI searches for the DataBlock called __core__Linux__WGET__Created__ and WGET on specified Target Machine and writes the current status back to the node. </Description>

	<BindAttributes>
		<AttributeFilter Name="NodeType" Mode="string" Value="Machine"/>
		<AttributeFilter Name="MachineClass" Mode="string" Value="Linux"/>
		<SubItem Name="Extensions" Alias="EXT">
			<SubItem Name="Tasks" Alias="TASKS">
				<AttributeFilter Name="TargetPath" Mode="exists"/>
                <AttributeFilter Name="DownloadUrl" Mode="exists"/>
				<AttributeFilter Name="User" Mode="exists"/>
				<AttributeFilter Name="Host" Mode="exists"/>
			</SubItem>
		</SubItem>
	</BindAttributes>
	
	<Log>__KI ${KIID} is now bound to ${NODE:NodeID}__</Log>
		
	<CreateTrigger>
		<IssueCondition>
			<Description> Checks Issue for DataBlock __core__${NODE:OSInfo}__WGET__Created__ and attribute ExtUID being the same as in the Node the KI binds to. </Description>
			<SubItem Name="__core__Linux__WGET__Created__" Alias="ADDED">
				<AttributeFilter Name="ExtUID" Mode="string" Value="${TASKS:UID}" />
				<AttributeFilter Name="Status" Mode="notexists"/>	
			</SubItem>
		</IssueCondition>
		
		<Activate>
			<Action Capability="ExecuteCommand" Error="ERROR" Output="OUTPUT" Result="RESULT" SystemRC="SYSTEMRC" Timeout="600">
				<Parameter Name="User">${TASKS:User}</Parameter>
				<Parameter Name="Hostname">${TASKS:Host}</Parameter>
				<Parameter Name="Command">
                    <![CDATA["mkdir -p ${TASKS:TargetPath} && cd ${TASKS:TargetPath} && sudo wget -N ${TASKS:DownloadUrl}"]]>
				</Parameter> 
			</Action>
			
			<If>
				<VarCondition VarString="${SYSTEMRC}" Mode="eq" Value="0"/>
				<Then>
					<SetAttribute Name="TASKS:CurrentState" Value="ReadState"/>
				</Then>
				<Else>
					<Eject>__Failed to WGET the URL__</Eject>
				</Else>
			</If>

			<SetAttribute Name="ADDED:Status" Value="created" /> 
		</Activate>
	</CreateTrigger>
</KnowledgeItem>


