<KnowledgeItem ID="OpexSoftware:DEPLOYSHARDEDMONGODBCLUSTER:__core__Ubuntu__ADDSHARD__Created__" xmlns="http://www.arago.de/KiSchema">
	<Title>__core__Ubuntu__ADDSHARD__Created__</Title>
	<Description> This KI searches for the DataBlock called __core__Ubuntu__ADDSHARD__Created__ and ADDEDs the package on the specified Target Machine and writes the current status back to the node. </Description>

	<BindAttributes>
		<AttributeFilter Name="NodeType" Mode="string" Value="Machine"/>
		<SubItem Name="OSInformation" Alias="OSINFO">
			<AttributeFilter Name="Name" Mode="string" Value="Ubuntu"/>
		</SubItem>
		<SubItem Name="Extensions" Alias="EXT">
			<SubItem Name="Tasks" Alias="TASKS">
				<AttributeFilter Name="MachineRunningMongos" Mode="exists"/>
				<AttributeFilter Name="MongosPort" Mode="exists"/>
				<AttributeFilter Name="TargetMachine" Mode="exists"/>
				<AttributeFilter Name="User" Mode="exists"/>
				<AttributeFilter Name="Host" Mode="exists"/>
			</SubItem>
		</SubItem>
	</BindAttributes>
	
	<Log>__KI ${KIID} is now bound to ${NODE:NodeID}__</Log>
		
	<CreateTrigger>
		<IssueCondition>
			<Description> Checks Issue for DataBlock __core__${NODE:OSInfo}__ADDSHARD__Created__ and attribute ExtUID being the same as in the Node the KI binds to. </Description>
			<SubItem Name="__core__Ubuntu__ADDSHARD__Created__" Alias="ADDED">
				<AttributeFilter Name="ExtUID" Mode="string" Value="${TASKS:UID}" />
				<AttributeFilter Name="Status" Mode="notexists"/>	
			</SubItem>
		</IssueCondition>
		
		<Activate>
			<Action Capability="ExecuteCommand" Error="ERROR" Output="OUTPUT" Result="RESULT" SystemRC="SYSTEMRC" Timeout="60">
				<Parameter Name="User">${TASKS:User}</Parameter>
				<Parameter Name="Hostname">${TASKS:Host}</Parameter>
				<Parameter Name="Command">"mkdir /data/configdb;mongod --configsvr --dbpath ${TASKS:Path} --port 27019"</Parameter>
			</Action>
			
			<If>
				<VarCondition VarString="${SYSTEMRC}" Mode="eq" Value="0"/>
				<Then>
					<SetAttribute Name="TASKS:CurrentState" Value="ReadState"/>
				</Then>
				<Else>
					<Eject>__Failed to ADDED directory ${TASKS:path}__</Eject>
				</Else>
			</If>

			<SetAttribute Name="ADDED:Status" Value="created" /> 
		</Activate>
	</CreateTrigger>
</KnowledgeItem>


