<KnowledgeItem ID="OpexSoftware:DEPLOYSHARDEDMONGODBCLUSTER:__core__Ubuntu__RUNCOMMAND__ReadState__" xmlns="http://www.arago.de/KiSchema">
	<Title>__core__Ubuntu__RUNCOMMAND__ReadState__</Title>
	<Description> This KI searches for the DataBlock called __core__Ubuntu__RUNCOMMAND__ReadState__ and verifies the CurrentState of the package on the specified Target Machine and writes it back to the node. </Description>

	<BindAttributes>
		<AttributeFilter Name="NodeType" Mode="string" Value="Machine"/>
		<AttributeFilter Name="MachineClass" Mode="string" Value="Linux"/>
		<SubItem Name="OSInformation" Alias="OSINFO">
			<AttributeFilter Name="Name" Mode="string" Value="CentOS"/>
		</SubItem>
		<SubItem Name="Extensions" Alias="EXT">
			<SubItem Name="Tasks" Alias="TASKS">
				<AttributeFilter Name="Path" Mode="exists"/>
				<AttributeFilter Name="Command" Mode="exists"/>
				<AttributeFilter Name="TargetMachine" Mode="exists"/>
				<AttributeFilter Name="User" Mode="exists"/>
				<AttributeFilter Name="Host" Mode="exists"/>
			</SubItem>
		</SubItem>
	</BindAttributes>

	<Log>__KI ${KIID} is now bound to ${NODE:NodeID}__</Log>
		
	<CreateTrigger>
		<IssueCondition>
			<Description> Checks Issue for DataBlock __core__${NODE:OSInfo}__RUNCOMMAND__ReadState__ and attribute ExtUID being the same as the machine KI binds to. </Description>
			<SubItem Name="__core__Ubuntu__RUNCOMMAND__ReadState__" Alias="CHECK">
				<AttributeFilter Name="ExtUID" Mode="string" Value="${TASKS:UID}"/>	
				<AttributeFilter Name="Status" Mode="notexists"/>	
			</SubItem>
		</IssueCondition>

		<!-- Run Command will not set the CurrentState to Created
			because there is no command to check. -->

		<Activate>
			  <SetAttribute Name="TASKS:CurrentState" Value="Created"/>
			
		</Activate>
	</CreateTrigger>
</KnowledgeItem>



