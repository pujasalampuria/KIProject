<?xml version="1.0" encoding="UTF-8"?>
<KnowledgeItem ID="OpexSoftware:Ubuntu:APTUPDATE:__core__Ubuntu__APTUPDATE__Created__" xmlns="http://www.arago.de/KiSchema">
	<Title>__core__Ubuntu__APTUPDATE__Created__</Title>
	<Description> This KI searches for the DataBlock called __core__Ubuntu__APTUPDATE__Created__ 
		and update the specified Target Machine and writes the current status back to the node.
	</Description>

	<BindAttributes>
		<AttributeFilter Name="NodeType" Mode="string" Value="Machine" />
		<AttributeFilter Name="MachineClass" Mode="string" Value="Linux" />
		<SubItem Name="OSInformation" Alias="OSINFO">
			<AttributeFilter Name="Name" Mode="string" Value="Ubuntu" />
		</SubItem>
		<SubItem Name="Extensions" Alias="EXT">
			<SubItem Name="Tasks" Alias="TASKS">
				<AttributeFilter Name="TargetMachine" Mode="exists" />
				<AttributeFilter Name="User" Mode="exists" />
				<AttributeFilter Name="Host" Mode="exists" />
			</SubItem>
		</SubItem>
	</BindAttributes>

	<Log>__KI ${KIID} is now bound to ${NODE:NodeID}__</Log>

	<CreateTrigger>
		<IssueCondition>
			<Description> Checks Issue for DataBlock__core__Ubuntu__APTUPDATE__Created__ 
				and attribute ExtUID being the same as in the Node the KI binds to.
			</Description>
			<SubItem Name="__core__Ubuntu__APTUPDATE__Created__" Alias="INSTALL">
				<AttributeFilter Name="ExtUID" Mode="string" Value="${TASKS:UID}" />
				<AttributeFilter Name="Status" Mode="notexists" />
			</SubItem>
		</IssueCondition>

		<Activate>
			<Action Capability="ExecuteCommand" Error="ERROR" Output="OUTPUT" Result="RESULT" SystemRC="SYSTEMRC" Timeout="60">
				<Parameter Name="User">${TASKS:User}</Parameter>
				<Parameter Name="Hostname">${TASKS:Host}</Parameter>
				<Parameter Name="Command">"sudo apt-get update"</Parameter>
			</Action>

			<If>
				<VarCondition VarString="${SYSTEMRC}" Mode="eq" Value="0" />
				<Then>
					<SetAttribute Name="TASKS:CurrentState" Value="ReadState" />
				</Then>
				<Else>
					<Eject>__Failed to update__</Eject>
				</Else>
			</If>
			<SetAttribute Name="INSTALL:Status" Value="created" />
		</Activate>
	</CreateTrigger>
</KnowledgeItem>