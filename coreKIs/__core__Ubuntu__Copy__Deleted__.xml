<KnowledgeItem ID="OpexSoftware:Ubuntu:Copy:__core__Ubuntu__Copy__Deleted__" xmlns="http://www.arago.de/KiSchema">
	<Title>__core__Ubuntu__Copy__Deleted__</Title>
	<Description> This KI searches for the DataBlock called __core__CentOS__Copy__Deleted__ and removes the file/directory on the specified Target Machine and writes the status back to the node.  </Description>

	<BindAttributes>
		<AttributeFilter Name="NodeType" Mode="string" Value="Machine"/>
		<SubItem Name="OSInformation" Alias="OSINFO">
			<AttributeFilter Name="Name" Mode="string" Value="Ubuntu"/>
		</SubItem>
		<SubItem Name="Extensions" Alias="EXT">
			<SubItem Name="Tasks" Alias="TASKS">
				<AttributeFilter Name="Src" Mode="exists"/>
				<AttributeFilter Name="TargetMachine" Mode="exists"/>
				<AttributeFilter Name="Dest" Mode="exists"/>
				<AttributeFilter Name="User" Mode="exists"/>
				<AttributeFilter Name="Host" Mode="exists"/>
			</SubItem>
		</SubItem>
	</BindAttributes>

	<Log>__KI ${KIID} is now bound to ${NODE:NodeID}__</Log>
		
	<CreateTrigger>
		<IssueCondition>
			<Description> Checks Issue for DataBlock __core__${NODE:OSInfo}__Copy__Deleted__ and attribute ExtUID being the same as the machine KI binds to. </Description>
			<SubItem Name="__core__Ubuntu__Copy__Deleted__" Alias="CHECK">
				<AttributeFilter Name="ExtUID" Mode="string" Value="${TASKS:UID}"/>	
				<AttributeFilter Name="Status" Mode="notexists"/>	
			</SubItem>
		</IssueCondition>

		<Activate>
			<Action Capability="ExecuteLocalCommand" Error="ERROR" Output="OUTPUT" Result="RESULT" SystemRC="SYSTEMRC" Timeout="60">
				
				<Parameter Name="Command">
					ssh ${TASKS:User}@${TASKS:Host} rm -rf ${TASKS:Dest}
				</Parameter> 
			</Action>
			
			<If>
				<VarCondition VarString="${SYSTEMRC}" Mode="eq" Value="0"/>
				<Then>
					<SetAttribute Name="TASKS:CurrentState" Value="ReadState"/>
				</Then>
				<Else>
					<Eject>__Failed to delete file/directory ${TASKS:Dest}__</Eject>
				</Else>
			</If>		
			<SetAttribute Name="CHECK:Status" Value="deleted" /> 
			
		</Activate>
	</CreateTrigger>
</KnowledgeItem>


