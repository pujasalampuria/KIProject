<KnowledgeItem ID="OpexSoftware:HAProxyInstallAndDeployWarConfig:HAProxyInstallAndDeployWarConfigKI" xmlns="http://www.arago.de/KiSchema">
	<Title>Install HAProxy And Deploy War</Title>
	<Description>Initiates the workflow for Installing HAProxy and Deploying war.</Description>

	<BindAttributes>
		<AttributeFilter Name="NodeType" Mode="string" Value="Machine"/>
		<RelatedNode Mode="predecessor" Alias="PRE">
			<AttributeFilter Name="NodeType" Mode="string" Value="Application"/>
		</RelatedNode>
	</BindAttributes>

	<Log>__KI ${KIID} is now bound to ${NODE:NodeID}__</Log>

	<CreateTrigger>

		<IssueCondition>
			<Description>Searches for an Issue with DataBlock HAProxyInstallAndDeployWarConfig and the necessary information for sucessful completion of workflow</Description>
			<SubItem Name="HAProxyInstallAndDeployWar" Alias="HIDW">
				<AttributeFilter Name="TargetApp" Mode="string" Value="${PRE:NodeName}"/>
				<AttributeFilter Name="TargetMachine" Mode="string" Value="${NODE:NodeName}"/>
				<AttributeFilter Name="War" Mode="exists"/>
				<AttributeFilter Name="TargetState" Mode="string" Value="Created"/>
				<AttributeFilter Name="Status" Mode="notexists"/>				
			</SubItem>
		</IssueCondition>

		<Activate>
			
			<SetAttribute Name="HIDW:Status" Value="WorkflowStarted" /> 
			
			<GenerateData Alias="PROTASKS"> 
				<DataType>ProcessingTasks</DataType> 
				<CurrentTask>1</CurrentTask>
			</GenerateData>

			
			
 
      
			<GenerateData Alias="VAL"> 
				<DataType>Validate</DataType>
				<ExtUID>${NODE:Extensions/Tasks/UID}</ExtUID>
			</GenerateData>	
    
    
			
           <!-- TASK1:  Install HA Proxy-->
           
			<IncAttribute Name="PROTASKS:NumberTotal"/>
			
			<XMLExtract StoreTo="NODE:Extensions" Mode="simple"><![CDATA[
				<NewBlock>
				  <Tasks 
					PKG=haproxy
					TargetMachine=${HIDW:TargetMachine}      
					TargetState=Created
					User=${HIDW:User}
					Host=${HIDW:Host}
                                        Lib=PKG
					CurrentState=ReadState
					TaskNumber=${PROTASKS:NumberTotal}/> /> 
				</NewBlock>]]>
			</XMLExtract> 
			
 
      
			<GenerateData Alias="VAL"> 
				<DataType>Validate</DataType>
				<ExtUID>${NODE:Extensions/Tasks/UID}</ExtUID>
			</GenerateData>	
      
	 <!-- TASK2:  Install Tomcat-->
           
			<IncAttribute Name="PROTASKS:NumberTotal"/>
			
			<XMLExtract StoreTo="NODE:Extensions" Mode="simple"><![CDATA[
				<NewBlock>
				  <Tasks 
					PKG=tomcat7
					TargetMachine=${HIDW:TargetMachine}      
					TargetState=Created
					User=${HIDW:User}
					Host=${HIDW:Host}
					Lib=PKG
					CurrentState=ReadState	
					TaskNumber=${PROTASKS:NumberTotal}/> 
				</NewBlock>]]>
			</XMLExtract> 
			
 
      
			<GenerateData Alias="VAL"> 
				<DataType>Validate</DataType>
				<ExtUID>${NODE:Extensions/Tasks/UID}</ExtUID>
			</GenerateData>	
       <!-- TASK3:  Copy War to Tomcat-->
           
			<IncAttribute Name="PROTASKS:NumberTotal"/>
			
			<XMLExtract StoreTo="NODE:Extensions" Mode="simple"><![CDATA[
				<NewBlock>
				  <Tasks 
					
					TargetMachine=${HIDW:TargetMachine}      
					TargetState=Created
					User=${HIDW:User}
					Host=${HIDW:Host}
					Src="/opt/autopilot/test-now.war"
					Dest="/var/lib/tomcat7/webapps"
                                        Lib=Copy
					CurrentState=ReadState
					TaskNumber=1/> /> 
				</NewBlock>]]>
			</XMLExtract> 
         		
			<GenerateData> 
				<DataType>Resolve</DataType>
				<Status>checkForResolve</Status>
			</GenerateData>	
			
		</Activate>
	</CreateTrigger>
</KnowledgeItem>

