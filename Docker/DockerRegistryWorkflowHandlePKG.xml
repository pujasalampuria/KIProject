                  <Host>${DRWHP:Host}</Host>
                  <PKG>build-essential</PKG>
                  <User>${DRWHP:User}</User>
                  <CurrentState>ReadState</CurrentState>
                  <TaskNumber>${PROTASKS:NumberTotal}</TaskNumber>
